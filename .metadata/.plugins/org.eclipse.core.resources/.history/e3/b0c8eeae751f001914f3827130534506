package com.revature.q5.test;

import java.util.ArrayList;
import java.util.List;

import org.apache.hadoop.io.DoubleWritable;
import org.apache.hadoop.io.LongWritable;
import org.apache.hadoop.io.Text;
import org.apache.hadoop.mrunit.mapreduce.MapDriver;
import org.apache.hadoop.mrunit.mapreduce.MapReduceDriver;
import org.apache.hadoop.mrunit.mapreduce.ReduceDriver;
import org.junit.Before;
import org.junit.Test;

import com.revature.q5.Q5Mapper;
import com.revature.q5.Q5Reducer;

public class Q5Test {
	
	  MapDriver<LongWritable, Text, Text, DoubleWritable>  mapDriver;
	  ReduceDriver <Text, DoubleWritable, Text, Text> reduceDriver;
	  MapReduceDriver<LongWritable, Text, Text, DoubleWritable, Text, Text> mapReduceDriver;
	  
	  @Before
	  public void setUp() {
		    Q5Mapper mapper = new Q5Mapper();
		    Q5Reducer reducer = new Q5Reducer();
		    mapDriver = MapDriver.newMapDriver(mapper);
		    reduceDriver = ReduceDriver.newReduceDriver(reducer);
		    mapReduceDriver = MapReduceDriver.newMapReduceDriver(mapper, reducer);
	  }
	 
	  @Test
	  public void testMapper() {
		  mapDriver.withInput(new LongWritable(), new Text("\"United Kingdom\",\"GBR\",\"Employment in agriculture, "
		  		+ "female (% of female employment)\",\"SL.AGR.EMPL.FE.ZS\",\"\",\"\",\"\",\"\",\"\",\"\",\"\",\"\",\"\","
		  		+ "\"1.71000003814697\",\"1.64999997615814\",\"1.5900000333786\",\"1.52999997138977\",\"1.61000001430511\","));
		  mapDriver.withOutput(new Text("United Kingdom Agriculture Female"), new DoubleWritable(-0.03508775476627975));
		  mapDriver.withOutput(new Text("United Kingdom Agriculture Female"), new DoubleWritable(-0.03636360221000972));
		  mapDriver.withOutput(new Text("United Kingdom Agriculture Female"), new DoubleWritable(-0.03773588725110617));
		  mapDriver.withOutput(new Text("United Kingdom Agriculture Female"), new DoubleWritable(0.05228761072634025));
		  mapDriver.runTest();
	  }
	  
	  @Test
	  public void testReducer() {
		  List<DoubleWritable> values = new ArrayList<DoubleWritable>();
		  values.add(new DoubleWritable(-0.03508775476627975));
		  values.add(new DoubleWritable(-0.03636360221000972));
		  values.add(new DoubleWritable(-0.03773588725110617));
		  values.add(new DoubleWritable(0.05228761072634025));
		  reduceDriver.withInput(new Text("United Kingdom Agriculture Female"), values);
		  reduceDriver.withOutput(new Text("United Kingdom Agriculture Female"), new Text("-1.42"));
		  reduceDriver.runTest();
	  }
	  
	  @Test
	  public void testMapReduce() {
		  mapReduceDriver.withInput(new LongWritable(), new Text("\"United Kingdom\",\"GBR\",\"Employment in agriculture, "
			  		+ "female (% of female employment)\",\"SL.AGR.EMPL.FE.ZS\",\"\",\"\",\"\",\"\",\"\",\"\",\"\",\"\",\"\","
			  		+ "\"1.71000003814697\",\"1.64999997615814\",\"1.5900000333786\",\"1.52999997138977\",\"1.61000001430511\","
			  		+ "\"1.47000002861023\",\"1.46000003814697\",\"1.49000000953674\",\"1.44000005722046\",\"1.41999995708466\","
			  		+ "\"1.35000002384186\",\"1.29999995231628\",\"1.23000001907349\",\"1.25\",\"1.26999998092651\",\"1.25\","
			  		+ "\"1.24000000953674\",\"1.03999996185303\",\"1.14999997615814\",\"1.20000004768372\",\"1\",\"1.12999999523163\","
			  		+ "\"1.10000002384186\",\"1.12999999523163\",\"1.07000005245209\",\"1.13999998569489\",\"1.22000002861023\","
			  		+ "\"1.14999997615814\",\"1.04999995231628\",\"0.910000026226044\",\"0.759999990463257\",\"0.769999980926514\","
			  		+ "\"0.680000007152557\",\"0.689999997615814\",\"0.579999983310699\",\"0.600000023841858\",\"0.730000019073486\","
			  		+ "\"0.670000016689301\",\"0.75\",\"0.730000019073486\",\"0.550000011920929\",\"0.600000023841858\",\"0.649999976158142\","
			  		+ "\"0.680000007152557\",\"0.600000023841858\",\"0.709999978542328\",\"0.639999985694885\",\"\","));
		  mapReduceDriver.withOutput(new Text("United Kingdom Agriculture Female"), new Text());
		  mapReduceDriver.runTest();
	  }

}
